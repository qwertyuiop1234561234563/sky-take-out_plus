<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.UserMapper">
    <insert id="insert" parameterType="com.sky.entity.User" useGeneratedKeys="true" keyProperty="id">
        insert into user (openid, create_time,name,phone,sex,id_number,avatar)
        values (#{openid}, #{createTime},#{name},#{phone},#{sex},#{idNumber},#{avatar})
    </insert>
    <select id="countByMap" resultType="java.lang.Integer">
        select count(*) from user
        <where>
            <if test="begin != null">
                and create_time >= #{begin}
            </if>
            <if test="end != null">
                and create_time &lt;= #{end}
            </if>
        </where>
    </select>

</mapper>
